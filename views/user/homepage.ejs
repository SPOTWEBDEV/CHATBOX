<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/fontawesome-6/css/all.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body class="relative">
    <style>
      /* NAVBAR */
      #sitename {
        color: var(--primary);
      }
      #sitename span {
        font-family: text1;
        font-size: 40px;
      }
      #active {
        background: var(--primary);
      }
      @media (max-width: 240px) {
        #sitename span {
          font-family: text1;
          font-size: 20px;
        }
        #sitename i {
          font-size: 20px;
        }
        #baricon {
          font-size: 20px;
        }
      }
      i {
        color: var(--primary);
      }

      input {
        background: var(--colored);
      }
      nav {
        background: var(--colored);
      }
      @media (max-width: 500px) {
        #advert {
          display: none;
        }
        #post{
          width: 100%;
        }
      }
      @media (max-width: 260px){
        #sponouse{
          width: 90%;
           font-size: 13px;
        }
        #createPost{
          padding: 10px 0px;
          height: fit-content;
          flex-direction: column;
        }
      }
    </style>

    <nav id="" class="h-20 w-full flex fixed z-50 top-0 items-center justify-around">
      <div id="sitename" class="text-4xl gap-3 flex items-center">
        <span class="">chatbox</span>
        <i class="fas fa-up-right-and-down-left-from-center mb-2"></i>
      </div>
      <div
        class="hidden sm:flex md:w-72 lg:w-96 w-52 h-12 items-center rounded-xl bg-white"
      >
        <i class="fas fa-search ml-2"></i>
        <input
          class="w-[100%] bg-transparent px-2 h-full border-none outline-none"
          type="text"
          placeholder="hello world"
        />
      </div>
      <div class="hidden sm:flex items-center text-2xl gap-6">
        <div class="relative">
          <div
            class="bg-red-500 h-2 w-2 rounded-full absolute -right-0.5 top-1"
          ></div>
          <i class="fa fa-bell" aria-hidden="true"></i>
        </div>
        <i class="fas fa-cog"></i>
        <i class="fa fa-user"></i>
      </div>

      <div class="block sm:hidden">
        <i
          style="color: var(--primary)"
          class="fas fa-bars text-4xl"
          id="baricon"
        ></i>
      </div>
    </nav>

    <section class="h-screen w-full absolute top-[80px]">
      <!-- SIDE NAV -->
      <div class="w-[20%] fixed hidden md:flex flex-col items-center justify-center"
      >
        <div
          class="w-[90%] py-3  flex flex-col items-center justify-center"
        >
          <div
            class="flex items-center mt-4 justify-center gap-2 w-[90%] hover:text-white hover:bg-blue-600 py-2 rounded"
          >
            <div
              class="h-12 w-12 rounded-full bg-green-500 flex items-center justify-center"
            >
              <i class="fa fa-home text-white" aria-hidden="true"></i>
            </div>
            <p>home</p>
          </div>
          <div
            class="flex items-center mt-4 justify-center gap-2 w-[90%] hover:bg-blue-600 hover:text-white py-2 rounded"
          >
            <div
              class="h-12 w-12 rounded-full bg-green-500 flex items-center justify-center"
            >
              <i class="fa fa-home text-white" aria-hidden="true"></i>
            </div>
            <p>profile</p>
          </div>
          <div
            class="flex items-center mt-4 justify-center gap-2 w-[90%] hover:text-white hover:bg-blue-600 py-2 rounded"
          >
            <div
              class="h-12 w-12 rounded-full bg-green-500 flex items-center justify-center"
            >
              <i class="fa fa-home text-white" aria-hidden="true"></i>
            </div>
            <p>group</p>
          </div>
          <div
            class="flex items-center mt-4 justify-center gap-2 w-[90%] hover:text-white hover:bg-blue-600 py-2 rounded"
          >
            <div
              class="h-12 w-12 rounded-full bg-green-500 flex items-center justify-center"
            >
              <i class="fa fa-home text-white" aria-hidden="true"></i>
            </div>
            <p>group</p>
          </div>
          <div
            class="flex items-center mt-4 justify-center gap-2 w-[90%] hover:text-white hover:bg-blue-600 py-2 rounded"
          >
            <div
              class="h-12 w-12 rounded-full bg-green-500 flex items-center justify-center"
            >
              <i class="fa fa-home text-white" aria-hidden="true"></i>
            </div>
            <p>group</p>
          </div>
        </div>
      </div>
      <!-- OTHER PART -->
      <div class=" absolute flex right-0 md:w-[80%] w-[100%]">
        <!-- POST -->
        <div id="post" class="w-[80%] flex flex-col items-center p-4">
          <div id="createPost"  class="w-[90%] flex items-center justify-between h-20 bg-white">
            <div class="flex h-full items-center ml-2 gap-2">
              <img
                class="rounded-full h-[50px] w-[50px]"
                src="/ProfileImage/<%= user[0].profileImage %>"
                alt=""
              />
              <p><%= user[0].username %></p>
            </div>
            <form action="/chatbox/createPost" method="GET">
           <button
              style="background: var(--primary)"
              class="capitalize p-2 px-4 mr-2 text-white rounded"
            >
              create post
            </button>
          </form>
            
          </div>
          <div class="w-[90%]  flex items-center justify-center flex-col">
            <% for(i=0;i<data.length;i++){ %>
                  
              <div id="post-box" class=" ml-0 sm:ml-10 mt-10 w-[80%]">
              <div class="flex items-center gap-3">
                <img
                  class="w-16 h-16 rounded-3xl"
                  src="/ProfileImage/<%= data[i].profileImage %>"
                  alt=""
                />
                <p class="font-light text-xl"><%= data[i].username %></p>
              </div>
              <div class="mt-6">
                <p class="my-2">
                  <%= data[i].post_desc %>
                </p>
              </div>
              <div class="relative">
                <img
                  class="w-96 h-60"
                  src="/post/<%= data[i].post_image %>"
                  alt=""
                />
                <div id="sponouse"
                  class="bg-green-500 text-white capitalize w-fit px-4 h-10 flex items-center absolute top-2 left-2"
                >
                  sponouse post
                </div>
              </div>
              <div class="flex gap-5 mt-4">
                <div class="gap-3 flex items-center">
                  <span class="text-xl font-semibold text-gray-500">12K</span>
                  <i class="fas fa-hand-point-left text-gray-500 text-xl"></i>
                </div>
                <div class="gap-3 flex items-cente">
                  <span class="text-xl font-semibold text-gray-500">12K</span>
                  <i class="fas fa-comment text-gray-500 text-xl"></i>
                </div>
                <div class="gap-3 flex items-center">
                  <span class="text-xl font-semibold text-gray-500">12K</span>
                  <i class="fas fa-share text-gray-500 text-xl"></i>
                </div>
              </div>
            </div>

            <%  } %>
            
          </div>
        </div>
        <!-- ADVERT USER -->
        <div id="advert" class="fixed  right-0 top-[0px] w-[20%] flex flex-col gap-2 items-center">
          <img
            class="w-[90%] h-[100%]"
            src="/img/javascript.jpg"
            alt=""
          />
          <img
            class="w-[90%] h-[100%]"
            src="/img/digitaldreams.jpg"
            alt=""
          />
        </div>
      </div>
    </section>
  </body>
</html>
